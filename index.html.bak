            const deltaX = targetOffsetX - offsetX;
            const deltaY = targetOffsetY - offsetY;
            
            // Aplicar suavizado
            offsetX += deltaX * smoothingFactor;
            offsetY += deltaY * smoothingFactor;
            
            // Obtener todos los elementos de concepto
            const conceptElements = document.querySelectorAll('.concept');
            
            // Normalizar la posición del mouse en relación con la ventana
            const normalizedMouseX = (mouseX / window.innerWidth) * 2 - 1;
            const normalizedMouseY = (mouseY / window.innerHeight) * 2 - 1;
            
            // Calcular la influencia del mouse (más intenso cuanto más cerca)
            concepts.forEach((concept, index) => {
                const element = document.getElementById(concept.id);
                if (element) {
                    const position = conceptPositions[index];
                    const velocity = conceptVelocities[index];
                    
                    // Factores para movimiento asimétrico
                    const connectionsCount = countConnections(index);
                    const connectionFactor = 0.5 + connectionsCount * 0.1; // Más conexiones = más movimiento
                    const weightFactor = 1.2 - concept.weight * 0.5; // Conceptos con menor peso se mueven más
                    
                    // Eliminar completamente el movimiento automático
                    // Solo permitir cambios en velocidad cuando hay interacción explícita
                    
                    // Influencia del mouse en movimiento (conceptos cercanos al mouse se mueven más)
                    const rect = element.getBoundingClientRect();
                    const elementCenterX = rect.left + rect.width / 2;
                    const elementCenterY = rect.top + rect.height / 2;
                    
                    // Calcular distancia al mouse
                    const distanceToMouse = Math.sqrt(
                        Math.pow(mouseX - elementCenterX, 2) + 
                        Math.pow(mouseY - elementCenterY, 2)
                    );
                    
                    // Función de influencia inversa (más cerca = más influencia) - aumentar distancia para el área más grande
                    const maxInfluenceDistance = Math.min(window.innerWidth, window.innerHeight) * 0.7;
                    const mouseInfluence = Math.max(0, 1 - (distanceToMouse / maxInfluenceDistance));
                    
                    // Dirección desde el mouse al elemento
                    let directionX = 0, directionY = 0;
                    if (distanceToMouse > 0) {
                        directionX = (elementCenterX - mouseX) / distanceToMouse;
                        directionY = (elementCenterY - mouseY) / distanceToMouse;
                    }
                    
                    // Mantener posición fija sin movimiento orbital
                    // Solo usar la posición base original sin cambios automáticos
                    const baseX = Math.cos(position.angle) * position.radius;
                    const baseY = Math.sin(position.angle) * position.radius;
                    
                    // Añadir movimiento basado en la influencia del mouse
                    // Solo aplicar el efecto del mouse si está cerca
                    const mouseEffectThreshold = 0.2; // Umbral mínimo de influencia
                    const mouseEffectX = mouseInfluence > mouseEffectThreshold ? 
                                        directionX * mouseInfluence * 10 * weightFactor : 0;
                    const mouseEffectY = mouseInfluence > mouseEffectThreshold ? 
                                        directionY * mouseInfluence * 10 * weightFactor : 0;
                    
                    // Calcular posición aplicando solo efectos de interacción explícita
                    // Eliminar todo movimiento ondulatorio y automático
                    const time = Date.now() * 0.001;
                    
                    // Solo usar el efecto inicial durante la carga de la página
                    const initialFactor = isInitialLoad ? 
                                        Math.max(0, 1 - (time - startTime) / 3) : 0; // Desvanece después de 3 segundos
                    
                    const newX = baseX + 
                                (Math.sin(time * velocity.speed + index) * 0.3 * weightFactor * initialFactor) + 
                                mouseEffectX;
                                
                    const newY = baseY + 
                                (Math.cos(time * velocity.speed + index * 1.3) * 0.3 * weightFactor * initialFactor) + 
                                mouseEffectY;
                    
                    // Actualizar la posición
                    position.x = newX;
                    position.y = newY;
                    
                    // Ajustar el tamaño según la importancia/peso
                    const scaleFactor = 0.8 + (concept.weight * 0.4);
                    
                    // Aplicar la posición actualizada
                    const screenX = centerX + position.x * scale + offsetX;
                    const screenY = centerY + position.y * scale + offsetY;
                    
                    element.style.left = `${screenX}px`;
                    element.style.top = `${screenY}px`;
                    element.style.transform = `scale(${scaleFactor * scale})`;
                }
            });
            
            drawConnections();
            requestAnimationFrame(updatePositions);
        }
        
        // Inicializar el mapa mental
        createConceptElements();
        updatePositions();
        updateZoomLevel();
    </script>
</body>
